#include<iostream>
#include<cstdlib>
using namespace std;
int main()
{
    for(int i=1; i<=5; i++)
    {
        for(int j=1; j<=5-i; j++)
        {
             cout<<" ";
        }
        for(int k=1; k<=2*i-1; k++)
        {
             cout<<i%10;        
        }
        cout<<"\n"; 
    } 
     for(int i=1; i<=5; i++)
    {
        
        for(int k=1; k<=i; k++)
        {
             cout<<" ";        
        }
        for(int j=1; j<=9-2*i; j++)
        {
             cout<<i%10+5;
        }
        cout<<"\n"; 
    } 
    system("pause");
    return 0;
}
